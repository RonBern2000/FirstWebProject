@model WebProject.Models.Animal;

@{
    ViewBag.Title = "DeleteAnimal";
}

@section headerSection {
    <nav class="navbar navbar-expand-lg bg-body-tertiary bg-primary " data-bs-theme="dark" aria-label="Thirteenth navbar example">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsExample11" aria-controls="navbarsExample11" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-lg-flex" id="navbarsExample11">
                <a class="navbar-brand col-lg-3 me-0" asp-controller="Home" asp-action="Index"><img class="logo" src="/images/ZooIcon.png" alt="logo" /></a>
                <ul class="navbar-nav col-lg-6 justify-content-lg-center" style="gap:30px;">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Catalog" asp-action="Catalog">Catalog</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" asp-action="Administrator">Administrator</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
}

<form class="confirmDelete" asp-controller="Administrator" asp-action="DeleteAnimal" method="post">
    <input type="hidden" name="id" asp-for="AnimalId"/> @*When submit we also transfer this data*@
    <div class="form-group">
        <p>Enter the animal name "@Model.Name" to confirm</p>
        <input name="name" placeholder="AnimalName" class="form-control" />
    </div>
    <div class="form-group confirmBtns">
        <input class="btn btn-danger" type="submit" value="Delete" />
        <a asp-action="Administrator" class="btn btn-secondary" type="submit">Cancel</a>
    </div>
</form>