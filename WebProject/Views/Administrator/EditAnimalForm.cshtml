@model WebProject.Models.AnimalModelEditor

@{
    ViewBag.Title = "EditAnimalForm";
}

@section headerSection {
    <nav class="navbar navbar-expand-lg bg-body-tertiary bg-primary " data-bs-theme="dark" aria-label="Thirteenth navbar example">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsExample11" aria-controls="navbarsExample11" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-lg-flex" id="navbarsExample11">
                <div class="navbar-brand col-lg-3 me-0"><a asp-controller="Home" asp-action="Index"><img class="logo" src="/images/ZooIcon.png" alt="logo" /></a>Hello, @User.Identity!.Name</div>
                <ul class="navbar-nav col-lg-6 justify-content-lg-center" style="gap:30px;">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Catalog" asp-action="Catalog">Catalog</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" asp-action="Administrator">Administrator</a>
                    </li>
                </ul>
            </div>
        </div>
        @await Html.PartialAsync("_LogoutPartialView")
    </nav>
}
<div class="animalFormContainer">
    <form class="mt-3 animalForm" asp-controller="Administrator" asp-action="EditAnimal" enctype="multipart/form-data" method="post">
        <input type="hidden" name="id" value="@ViewBag.Animal.AnimalId" />
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" value="@ViewBag.Animal.Name" placeholder="ExampleName" />
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="Age"></label>
            <input asp-for="Age" value="@ViewBag.Animal.Age" class="form-control" placeholder="1,2,3...275" />
            <span asp-validation-for="Age"></span>
        </div>
        <div class="form-group">
            <label asp-for="Picture"></label>
            <input asp-for="Picture" class="form-control" placeholder="Keep Empty to not change the picture />
            <span asp-validation-for="Picture"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" placeholder="Enter new Description"></textarea>
            <span asp-validation-for="Description"></span>
        </div>
        <div class="form-group">
            <label>Current Description:</label>
            <textarea class="form-control" readonly>@ViewBag.Animal.Description</textarea>
        </div>
        <div class="form-group">
            @Html.DropDownList("CategoryName", ViewBag.Categories, "Select Category", new { @class = "form-control" })
        </div>
        <div class="form-group confirmBtns">
            <input id="addBtn" class="btn btn-success" type="submit" value="Save" />
            <a asp-action="Administrator" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
    <div>
        <h4>Current animal image:</h4>
        <img src="@ViewBag.Animal.PictureName" />
    </div>
</div>
