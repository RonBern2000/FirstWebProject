
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="~/css/Style.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/js/jquery.js"></script>
    <script src="~/js/jquery.validate.min.js"></script>
    <script src="~/js/jquery.validate.unobtrusive.min.js"></script>
    
</head>
<body>
     <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary bg-primary " data-bs-theme="dark" aria-label="Thirteenth navbar example">
            <div class="container-fluid">
               <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsExample11" aria-controls="navbarsExample11" aria-expanded="false" aria-label="Toggle navigation">
               <span class="navbar-toggler-icon"></span>
               </button>
               <div class="collapse navbar-collapse d-lg-flex" id="navbarsExample11">
                    <a class="navbar-brand col-lg-3 me-0" href="#"><img class="logo" src="/images/ZooIcon.png" alt="logo" /></a>
                    <ul class="navbar-nav col-lg-6 justify-content-lg-center">
                       <li class="nav-item">
                          <a class="nav-link active" aria-current="page" asp-action="Index">Home</a>
                       </li>
                       <li class="nav-item">
                          <a class="nav-link" asp-action="Catalog">Catalog</a>
                       </li>
                       <li class="nav-item">
                          <a class="nav-link" asp-action="Administrator">Administrator</a>
                       </li>
                    </ul>
               </div>
            </div>
        </nav>
     </header>

     <main>
         <div class="mainContent">
              @RenderBody()
         </div>
     </main>

    <div id="myfooter" class="container">
        <footer class="py-3 my-4">
            <ul class="nav justify-content-center border-bottom pb-3 mb-3">
                <li class="nav-item"><a asp-action="Index" class="nav-link px-2 ">Home</a></li>
                <li class="nav-item"><a href="#" class="nav-link px-2 ">Location</a></li>
                <li class="nav-item"><a href="#" class="nav-link px-2 ">About</a></li>
            </ul>
            <p class="text-center" style="color:white;">© 2024 Zoo, Inc</p>
        </footer>
    </div>
</body>
</html>
